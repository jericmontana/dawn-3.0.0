{% assign use_as_default_padding = section.settings.use_as_default_padding %}
{% assign use_as_default_bg = section.settings.use_as_default_bg %}
{%- style -%}
  {%- if use_as_default_padding -%}
    .section--featured-collection .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
    }

    @media screen and (min-width: 750px) {
      .section--featured-collection .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px !important;
        padding-bottom: {{ section.settings.padding_bottom }}px !important;
      }
    }
  {%- endif -%}

  {%- if  use_as_default_bg -%}
    .section--featured-collection .section-{{ section.id }}-bg-contaier {
      --color-foreground: {{section.settings.fg_color.red}},{{section.settings.fg_color.green}},{{section.settings.fg_color.blue}};
      --color-background: {{section.settings.bg_color.red}},{{section.settings.bg_color.green}},{{section.settings.bg_color.blue}};
      background-image: url('{{section.settings.bg_image | image_url}}');
      background-color: {{ section.settings.bg_color }};
      background-blend-mode: {{ section.settings.bg_blend }};
    }
  {%- endif -%}

{%- endstyle -%}

<div class="section section--featured-collection {% unless use_as_default_bg %}color-{{ section.settings.color_scheme }}{% endunless %}">
  <div class="section__bg-container section-{{ section.id }}-bg-contaier section-{{ section.id }}-padding">
    <div class="page-width collection">

      {% comment %} For Section Header {% endcomment %}
      {%- assign header = section.blocks | where: 'type', 'header' -%}
      {%- for block in header -%}
        {% if block.settings.title != blank or block.settings.subtitle != blank%}
          {%- render 'section-header',
            title: block.settings.title,
            subtitle: block.settings.subtitle,
            uppercase: block.settings.title_uppercase
          -%}
        {%- endif -%}
      {%- endfor -%}

      {% comment %} For Slider Component {% endcomment %}
      {%- assign slider = section.blocks | where: 'type', 'slider' -%}
      {%- for block in slider -%}
        {%- liquid
          assign products_to_display = block.settings.collection.all_products_count

          if block.settings.collection.all_products_count > block.settings.products_to_show
            assign products_to_display = block.settings.products_to_show
          endif

          assign slider_mode = block.settings.slider
          case slider_mode
            when 'everywhere'
              assign slider_class = "slider slider--everywhere slider--tablet"

            when 'medium-down'
              assign slider_class = "slider slider--tablet"
          endcase

        -%}

        {% capture grid_device_class %}
          grid--{{ block.settings.columns_mobile }}-col grid--{{ block.settings.columns_desktop }}-col-desktop grid--{{ block.settings.columns_tablet }}-col-tablet
        {% endcapture %}
        
        <div class="section__slider">
          <slider-component>
            <ul id="Slider-{{ section.id }}"
                class="grid {{grid_device_class | strip }} gridproduct-grid contains-card{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} {% if products_to_display > 2 and slider_mode != 'slide-me-not' %}{{ slider_class | strip }}{% endif %}"
                role="list">
                {%- for product in block.settings.collection.products limit: block.settings.products_to_show -%}
                <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item{% if block.settings.collection.all_products_count > 2 and slider_mode != 'slide-me-not' and block.settings.products_to_show > 2 %} slider__slide{% endif %}">
                    {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: block.settings.image_ratio,
                    show_secondary_image: block.settings.show_secondary_image,
                    show_vendor: block.settings.show_vendor,
                    show_rating: block.settings.show_rating,
                    show_description: block.settings.show_description,
                    description: block.settings.description
                    %}

                    {% if block.settings.show_add_to_cart_button%}
                      {% render 'button-add-to-cart', product: product %}
                    {% endif %}
                </li>
                {%- else -%}
                {%- for i in (1..4) -%}
                    <li class="grid__item">
                    {% render 'card-product', show_vendor: block.settings.show_vendor %}
                    </li>
                {%- endfor -%}
                {%- endfor -%}
            </ul>
  
            {%- if products_to_display > 2 and slider_mode != 'slide-me-not' -%}
            <div class="slider-buttons no-js-hidden">
              <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
              <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
            </div>
            {%- endif -%}
          </slider-component>
        </div>
      {%- endfor -%}

      {% comment %} For Button {% endcomment %}
      {%- assign button = section.blocks | where: 'type', 'button' -%}
      {%- for block in button -%}
        <div class="section__button center">
          {% render 'button',
            btn_label: block.settings.btn_label,
            btn_link: block.settings.btn_link,
            btn_size: block.settings.btn_size,
            hover_effect: block.settings.hover_effect,
            icon_type: block.settings.icon_type,
            shadow_effect: block.settings.shadow_effect,
            auto_width: block.settings.auto_width
          %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>
{% comment %} For Add To Cart {% endcomment %}
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
