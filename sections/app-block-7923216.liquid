    {
        "name": "ðŸ”° App Block",
        "tag": "section",
        "max_blocks": 2,
        "settings":[
            {
                "type": "checkbox",
                "id": "round_corner_background",
                "label": "Round Corner Background",
                "default": false
            },
            {
                "type": "header",
                "content": "Default Background"
            },
            {
