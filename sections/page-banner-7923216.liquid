{% assign use_as_default_padding = section.settings.use_as_default_padding %}
{%- style -%}
    {%- if use_as_default_padding -%}
        .section--page-banner .section-{{ section.id }}-padding {
            padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
            padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
        }

        @media screen and (min-width: 750px) {
            .section--page-banner .section-{{ section.id }}-padding {
                padding-top: {{ section.settings.padding_top }}px !important;
                padding-bottom: {{ section.settings.padding_bottom }}px !important;
            }
        }
    {%- endif -%}

    .section--page-banner .section-{{ section.id }}-bg-contaier {
        --color-foreground: {{settings.fg_color.red}},{{settings.fg_color.green}},{{settings.fg_color.blue}};
        --color-background: {{settings.bg_color.red}},{{settings.bg_color.green}},{{settings.bg_color.blue}};
        background-image: url('{{settings.bg_image | image_url}}');
        background-color: {{ settings.bg_color }};
        background-blend-mode: {{ settings.bg_blend }};
    }
{%- endstyle -%}

<div class="section section--page-banner section--page-banner-{{section.id}}">
    <div class="section__bg-container section-{{ section.id }}-bg-contaier section-{{ section.id }}-padding">
        <div class="page-width">

            {%- assign breadcrumb = section.blocks | where: 'type', 'breadcrumb' -%}
            {%- for block in breadcrumb -%}
                <div class="section__breadcrumb center">
                    {%- render 'breadcrumb-7923216' -%}
                </div>
            {%- endfor -%}

            {%- assign header = section.blocks | where: 'type', 'heading' -%}
            {%- for block in header -%}
                <div class="section__header center">
                    {% if block.settings.title != blank %}
                        <h2 class="h2 section__header--title {% if block.settings.title_uppercase %}uppercase{% endif %}">{{ block.settings.title | escape }}</h2>
                    {% else %}
                        <h2 class="h2 section__header--title {% if block.settings.title_uppercase %}uppercase{% endif %}">{{ page.title | escape }}</h2>
                    {% endif %}

                    {% unless block.settings.subtitle == blank %}
                        <p class="section__header--subtitle">{{ block.settings.subtitle | escape }}</p>
                    {% endunless%}
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>

