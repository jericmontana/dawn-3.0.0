{{ 'section-logo-with-text-7923216.css' | asset_url | stylesheet_tag }}

{% assign use_as_default_padding = section.settings.use_as_default_padding %}
{% assign use_as_default_bg = section.settings.use_as_default_bg %}
{%- style -%}
  {%- if use_as_default_padding -%}
    .section--logo-with-text .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
    }

    @media screen and (min-width: 750px) {
      .section--logo-with-text .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px !important;
        padding-bottom: {{ section.settings.padding_bottom }}px !important;
      }
    }
  {%- endif -%}

  {%- if  use_as_default_bg -%}
    .section--logo-with-text .section-{{ section.id }}-bg-contaier {
      --color-foreground: {{section.settings.fg_color.red}},{{section.settings.fg_color.green}},{{section.settings.fg_color.blue}};
      --color-background: {{section.settings.bg_color.red}},{{section.settings.bg_color.green}},{{section.settings.bg_color.blue}};
      background-image: url('{{section.settings.bg_image | image_url}}');
      background-color: {{ section.settings.bg_color }};
      background-blend-mode: {{ section.settings.bg_blend }};
    }
  {%- endif -%}

  .section--logo-with-text-{{section.id}} .section__collection{
    border-radius: {{section.settings.cc_border_radius}}rem;
    background-color: {{section.settings.cc_bg_color}};
  }

{%- endstyle -%}

{% capture grid_device_class %}
    grid--{{ section.settings.columns_mobile }}-col grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_tablet }}-col-tablet
{% endcapture %}

<div class="section section--logo-with-text section--logo-with-text-{{section.id}} {% unless use_as_default_bg %}color-{{ section.settings.color_scheme }}{% endunless %}">
    <div class="section__bg-container section-{{ section.id }}-bg-contaier section-{{ section.id }}-padding">
        <div class="page-width">

            {% comment %} For Section Header Support {% endcomment %}
            {%- assign header_support = section.blocks | where: 'type', 'heading_support' -%}

            {% comment %} For Section Header {% endcomment %}
            {%- if header_support.size < 1 -%}
            {%- assign header = section.blocks | where: 'type', 'heading' -%}
            {%- for block in header -%}
                {%- if block.settings.title != blank or block.settings.subtitle != blank -%}
                {%- render 'section-header',
                    title: block.settings.title,
                    subtitle: block.settings.subtitle,
                    uppercase: block.settings.title_uppercase
                -%}
                {%- endif -%}
            {%- endfor -%}
            {%- endif  -%}

            {% comment %} For Section Header Support {% endcomment %}
            {%- for block in header_support -%}
                {%- if block.settings.title_support != blank -%}
                <div class="section__header center">
                    <h2>{{ block.settings.title_support }}</h2>
                </div>
                {%- endif -%}
            {%- endfor -%}
            
            {% comment %} For Section Logo With Text {% endcomment %}
            {%- assign image_with_text_blocks = section.blocks | where: 'type', 'image_with_text' -%}
            {%- if image_with_text_blocks -%}
                <div class="section__logo-and-text">
                    <ul class="grid {{ grid_device_class }}">
                        {%- for image_with_text_block in image_with_text_blocks -%}
                            <li class="grid__item" title="{{image_with_text_block.settings.logo_svg}}">
                                <div class="section__logo-and-text--logo">
                                    {%- render 'logo-svg', logo_svg:image_with_text_block.settings.logo_svg -%}
                                </div>
                                <div class="section__logo-and-text--text">
                                    <h3 class="h3 center">{{ image_with_text_block.settings.logo_title | escape }}</h3>
                                </div>
                            </li>
                        {%- endfor -%}
                    </ul>
                </div>
            {%- endif -%}

        </div>
    </div>
</div>

