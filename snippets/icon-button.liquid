{% comment %}
    Renders Icon

    Accepts:
    - icon_type

    Usage:
    {% render 'icon',
        icon_type: section.settings.icon_type
    %}

    Schema:
    {
        "settings": [

            ...

            {
                "type": "select",
                "id": "icon_type",
                "label": "Button Icon",
                "options": [
                    {
                    "value": "none",
                    "label": "None"
                    },
                    {
                    "value": "arrow",
                    "label": "Arrow"
                    }
                ],
                "default": "arrow"
            }
            
            ...

        ]
    }

{% endcomment %}

{%- if icon_type != 'none' -%}
    <svg viewBox="0 0 14 10" fill="none" aria-hidden="true" focusable="false" role="presentation" class="icon icon-{{ icon_type }}" xmlns="http://www.w3.org/2000/svg">
    
        {%- case icon_type -%}
        {%- when 'arrow' -%}
            <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor">
        {%- endcase -%}
        
    </svg>
{%- endif -%}