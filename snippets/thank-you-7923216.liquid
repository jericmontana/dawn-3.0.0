<modal-dialog id="PopupModal-{{ block.id }}" class="popupmodal--thankyou">
    <div role="dialog" aria-label="{{ block.settings.text }}" aria-modal="true" class="popupmodal--thankyou__content" tabindex="-1">
        <button id="ModalClose-{{ block.id }}" type="button" class="popupmodal--thankyou__toggle" aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button>
        <div class="popupmodal--thankyou__content-info">
            <h1>Thank You!!!</h1>
        </div>
    </div>
</modal-dialog>